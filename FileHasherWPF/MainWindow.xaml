<Window x:Class="FileHasherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileHasherWPF"
        mc:Ignorable="d"
        Title="File Hasher WPF" Topmost="True" Height="310" Width="700" MinHeight="310" MinWidth="680"
        AllowDrop="True" Drop="DropStringOrFiles">
    <Grid x:Name="MainGrid" Margin="5">
        <!--定义行-->
        <!--Auto表示根据内容设定大小，*表示根据空间填充大小-->
        <!--Span表示跨越的行/列数-->
        <!--行列本身并不支持间距，一种做法是增加空行/列-->
        <!--另一种做法是对于子对象设置Margin-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <!--定义列-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Top"
                   Text="字符串" />
        <!--
        <Button Grid.Row="0" Grid.Column="0" x:Name="button_Stop" VerticalAlignment="Top" Height="25" Margin="0,22,0,0"
                Content="停止"/>
-->
        <!--第二按钮参考：Height="25" Margin="0,53,0,0"-->
        <Button Grid.Row="0" Grid.Column="0" x:Name="button_Clear" VerticalAlignment="Top" Height="30" Margin="0,22,0,0"
                Content="清空" Click="button_Clear_Click"/>
        <CheckBox Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,85,0,0"
                  x:Name="checkBox_IsText" Content="校验&#xD;&#xA;文本" Checked="checkBox_IsText_Checked" Unchecked="checkBox_IsText_Unchecked"/>
        <CheckBox Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,120,0,0" 
                  x:Name="checkBox_IsFullPath" Content="完整&#xD;&#xA;路径" Checked="checkBox_IsFullPath_Checked" Unchecked="checkBox_IsFullPath_Unchecked"/>
        <TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" x:Name="textBox_Stream"
                 IsReadOnly="True" IsReadOnlyCaretVisible="True" TextWrapping="NoWrap"
                 AcceptsReturn="True" ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 Text="直接将文件拖入窗口即可计算哈希值&#xD;&#xA;支持多个文件&#xD;&#xA;在下方选择校验类型"
                 TextChanged="textBox_Stream_TextChanged" GotFocus="textBox_Stream_GotFocus" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="哈希值"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="2" x:Name="textBox_HashCode" IsReadOnly="True" 
                 FontFamily="Consolas" FontWeight="Bold" FontSize="14" 
                 MaxLines="1" Background="#FFEEEEEE"/>
        <Button Grid.Row="2" Grid.Column="4" x:Name="button_Copy" 
                Content="复制" Click="button_Copy_Click"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="对照值"
                   VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="2" x:Name="textBox_HashCodeForCompare" 
                 FontFamily="Consolas" FontWeight="Bold" FontSize="14" 
                 MaxLines="1" />
        <Button Grid.Row="4" Grid.Column="4" x:Name="button_Paste" 
                Content="粘贴" Click="button_Paste_Click" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="校验类型"
                   VerticalAlignment="Center" />
        <StackPanel Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Orientation="Horizontal">
            <RadioButton x:Name="radioButton_MD5" Content="MD5" Margin="5,0,0,0" Checked="radioButton_MD5_Checked"/>
            <RadioButton x:Name="radioButton_SHA1" Content="SHA1" Margin="15,0,0,0" Checked="radioButton_SHA1_Checked"/>
            <RadioButton x:Name="radioButton_SHA256" Content="SHA256" Margin="15,0,0,0" IsChecked="True" Checked="radioButton_SHA256_Checked"/>
            <RadioButton x:Name="radioButton_SHA512" Content="SHA512" Margin="10,0,0,0" Checked="radioButton_SHA512_Checked"/>
        </StackPanel>
        <Button Grid.Row="6" Grid.Column="2" x:Name="button_CompareHash" HorizontalAlignment="Right" Margin="0,0,10,0" Width="80"
                Content="比较哈希值" Click="button_CompareHash_Click" />
        <Button Grid.Row="6" Grid.Column="4" x:Name="button_GetHash"
                Content="打开文件" Click="button_GetHash_Click" />

    </Grid>
</Window>
